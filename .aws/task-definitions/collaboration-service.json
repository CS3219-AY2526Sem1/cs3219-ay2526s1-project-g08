{
  "family": "collaboration-service",
  "executionRoleArn": "arn:aws:iam::672832942376:role/ecsTaskExecutionRole",
  "networkMode": "awsvpc",
  "requiresCompatibilities": ["FARGATE"],
  "cpu": "1024",
  "memory": "3072",
  "runtimePlatform": {
    "cpuArchitecture": "X86_64",
    "operatingSystemFamily": "LINUX"
  },
  "containerDefinitions": [
    {
      "name": "collaboration-service",
      "image": "672832942376.dkr.ecr.ap-southeast-1.amazonaws.com/collaboration-service:latest",
      "cpu": 0,
      "essential": true,
      "portMappings": [
        {
          "containerPort": 3004,
          "hostPort": 3004,
          "protocol": "tcp",
          "name": "collaboration-service-3004-tcp",
          "appProtocol": "http"
        }
      ],
      "environment": [
        {
          "name": "PORT",
          "value": "3004"
        },
        {
          "name": "FRONTEND_URL",
          "value": "http://peerprep-alb-1487410036.ap-southeast-1.elb.amazonaws.com"
        },
        {
          "name": "NODE_ENV",
          "value": "production"
        }
      ],
      "secrets": [
        {
          "name": "JWT_SECRET",
          "valueFrom": "arn:aws:secretsmanager:ap-southeast-1:672832942376:secret:peerprep/secrets:JWT_SECRET::"
        },
        {
          "name": "MONGO_URI",
          "valueFrom": "arn:aws:secretsmanager:ap-southeast-1:672832942376:secret:peerprep/secrets:MONGO_URI_COLLABORATION::"
        }
      ],
      "logConfiguration": {
        "logDriver": "awslogs",
        "options": {
          "awslogs-group": "/ecs/collaboration-service",
          "awslogs-create-group": "true",
          "awslogs-region": "ap-southeast-1",
          "awslogs-stream-prefix": "ecs"
        }
      }
    }
  ]
}
