{
  "family": "matching-service",
  "executionRoleArn": "arn:aws:iam::672832942376:role/ecsTaskExecutionRole",
  "networkMode": "awsvpc",
  "requiresCompatibilities": ["FARGATE"],
  "cpu": "256",
  "memory": "512",
  "runtimePlatform": {
    "cpuArchitecture": "X86_64",
    "operatingSystemFamily": "LINUX"
  },
  "containerDefinitions": [
    {
      "name": "matching-service",
      "image": "672832942376.dkr.ecr.ap-southeast-1.amazonaws.com/matching-service:latest",
      "cpu": 0,
      "essential": true,
      "portMappings": [
        {
          "containerPort": 3001,
          "hostPort": 3001,
          "protocol": "tcp",
          "name": "matching-service-3001-tcp",
          "appProtocol": "http"
        }
      ],
      "environment": [
        {
          "name": "PORT",
          "value": "3001"
        },
        {
          "name": "COLLABORATION_SERVICE_URL",
          "value": "http://peerprep-alb-1487410036.ap-southeast-1.elb.amazonaws.com/collaboration"
        },
        {
          "name": "QUESTION_SERVICE_URL",
          "value": "http://peerprep-alb-1487410036.ap-southeast-1.elb.amazonaws.com/questions"
        }
      ],
      "secrets": [
        {
          "name": "REDIS_URI",
          "valueFrom": "arn:aws:secretsmanager:ap-southeast-1:672832942376:secret:peerprep/secrets:REDIS_URI::"
        }
      ],
      "logConfiguration": {
        "logDriver": "awslogs",
        "options": {
          "awslogs-group": "/ecs/matching-service",
          "awslogs-create-group": "true",
          "awslogs-region": "ap-southeast-1",
          "awslogs-stream-prefix": "ecs"
        }
      }
    }
  ]
}
